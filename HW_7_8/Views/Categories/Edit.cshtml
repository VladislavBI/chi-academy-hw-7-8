@model CategoryEditViewModel

@{
    ViewBag.Title = "Edit category";
}

<div class="d-flex flex-column">
    <h1 class="my-3">@ViewBag.Title</h1>

    <span class="validation-error text-danger">
        @Html.ValidationSummary(true)
    </span>

    <form asp-controller="Categories" asp-action="Edit" method="post" class="form-horizontal my-3">
        <div class="row required mb-3">
            <label asp-for="Name"></label>
            <div>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-end mt-4">
            <input class="btn btn-success me-2" type="submit" value="Update" />
            <a class="btn btn-secondary-light btn-secondary" asp-controller="Categories" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>