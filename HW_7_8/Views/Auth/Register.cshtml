@model RegisterViewModel

@{
    ViewBag.Title = "Sign up";
}

<div class="center-container w-100">
    <h1 class="text-center my-3">@ViewBag.Title</h1>
    <div asp-validation-summary="All" class="text-danger validation-error"></div>

    <form method="post" class="form-horizontal w-25">

        <div class="row required mb-3">
            <label asp-for="Email" class="control-label"></label>
            <div>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row required mb-3">
            <label asp-for="Password" class="control-label"></label>
            <div>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="row required mb-3">
            <label asp-for="ConfirmPassword" class="control-label"></label>
            <div>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <input class="btn btn-primary w-100 mt-4" type="submit" value="Create account" />
    </form>
    <p class="mt-3">Got an account? <a asp-controller="Auth" asp-action="Login">Log in</a></p>
</div>